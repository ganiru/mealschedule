<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:MealSchedule" 
    x:Class="MealSchedule.LoginPage" Title="Meal Schedule">
    <!--<Label Text="Welcome to Xamarin Forms!" VerticalOptions="Center" HorizontalOptions="Center" />-->
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand" x:Name="layout">
            <Button Text="Sign in with Facebook" VerticalOptions="Start"
                BackgroundColor="Navy" HorizontalOptions="FillAndExpand" Clicked="ContinueAsGuest"
            TextColor="White" x:Name="btnFacebook" />
            <Button Text="Sign in with Google" Clicked="ContinueAsGuest"
                BackgroundColor="Red" 
            TextColor="White" x:Name="btnGoogle" />
            <Button Text="Continue as guest" Clicked="ContinueAsGuest"
                BackgroundColor="Gray"  
            TextColor="White" x:Name="btnGuest" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
